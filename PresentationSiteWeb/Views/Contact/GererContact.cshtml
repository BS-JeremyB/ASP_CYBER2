@model IEnumerable<Contact>
@{
    ViewData["Title"] = "Page de gestion de contact";
}

<h1>Gestion contact</h1>
</header>
<nav>
    <div class="sous-navbar">
        <a href="~/Contact/GererContact">Afficher contact</a>
        <a href="~/Contact/EnregistreContact">Enregistrer un contact</a>
    </div>
</nav>
<table>
    <thead>
        <tr>
            <th>Prenom</th>
            <th>Nom</th>
            <th>Email</th>
            <th>Detail</th>
            <th>Modifier</th>
            <th>Supprimer</th>
                
        </tr>
    </thead>
        
        @foreach (Contact contact in Model)
        {
        <tr>
            <td>@contact.Nom</td>
            <td>@contact.Prenom</td>
            <td>@contact.Email</td>
            <td><button><a asp-action="DetailContact" asp-route-id="@contact.Id" class="delete-btn">Detail</a></button></td>
            <td><button><a asp-action="ModifierContact" asp-route-id="@contact.Id" class="delete-btn">Modifier</a></button></td>
            <td><button><a asp-action="DeleteContact" asp-route-id="@contact.Id" class="delete-btn">Supprimer</a></button></td>
        </tr>      
        }
</table>
